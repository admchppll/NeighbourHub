@model Community.Models.UserAdminView
@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="row text-center">
        <h3>
            Users
            <span class="label label-success">@Model.TotalUsers</span>
        </h3>
        <div class="col-xs-12">
            <canvas id="userChart" width="400" height="200"></canvas>
        </div>
        <script>
            var ctx = document.getElementById("userChart");
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ["Active Users", "Users Without Profile", "Inactive Users", "Suspended Users"],
                    datasets: [{
                        data: [ @Model.TotalActiveUsers,@Model.TotalWithoutProfile, @Model.TotalInactiveUsers, @Model.TotalSuspendedUsers],
                        backgroundColor: [
                            "rgba(92, 184, 92,1)",
                            "rgba(164,104,213,1)",
                            "rgba(240, 173, 78,1)",
                            "rgba(217, 83, 79,1)"
                        ],
                        hoverBackgroundColor: [
                            "rgba(92, 184, 92,1)",
                            "rgba(164,104,213,1)",
                            "rgba(240, 173, 78,1)",
                            "rgba(217, 83, 79,1)"
                        ]
                    }]
                },
                options: {
                    responsive: true,
                }
            });
        </script>
    </div>
</div>