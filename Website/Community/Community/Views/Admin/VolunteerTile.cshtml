@model Community.Models.VolunteerPartialView
@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="row text-center">
        <h3>
            Volunteers
        </h3>
        <div class="col-xs-12">
            <canvas id="volunteerChart" width="400" height="200"></canvas>
        </div>
        <script>
            var Labels = "@Model.Labels".split(",");
            var PotentialVolunteers = "@Model.PotentialVolunteers".split(",");
            var VolunteerCount = "@Model.VolunteerCount".split(",");
            var WithdrawnCount = "@Model.WithdrawnCount".split(",");
            var RejectedCount = "@Model.RejectedCount".split(",");
            var ConfirmedCount = "@Model.ConfirmedCount".split(",");
            var PendingConfirmationCount = "@Model.PendingConfirmationCount".split(",");

            var ctx = document.getElementById("volunteerChart");
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Labels,
                    datasets: [
                       {
                           type: 'line',
                           label: 'Withdrawn Volunteers',
                           data: WithdrawnCount,
                           backgroundColour: "rgba(250, 255, 157,1)",
                           pointBackgroundColor: "rgba(245, 255, 0,1)",
                           pointBorderColor: "rgba(245, 255, 0,1)",
                           fill: false,
                           lineTension: 0.1,
                           borderColor: "rgba(245, 255, 0,1)",
                           borderCapStyle: 'butt',
                           borderDash: [],
                           borderDashOffset: 0.0,
                           borderJoinStyle: 'miter',
                           pointBackgroundColor: "#fff",
                           pointBorderWidth: 1,
                           pointHoverRadius: 5,
                           pointHoverBorderColor: "rgba(220,220,220,1)",
                           pointHoverBorderWidth: 2,
                           pointRadius: 1,
                           pointHitRadius: 10,
                           spanGaps: false
                       },
                        {
                            type: 'line',
                            label: 'Rejected Volunteers',
                            data: RejectedCount,
                            backgroundColour: "rgba(242, 222, 222,0.8)",
                            pointBackgroundColor: "rgba(217, 83, 79,1)",
                            pointBorderColor: "rgba(217, 83, 79,1)",
                            fill: true,
                            lineTension: 0.1,
                            borderColor: "rgba(217, 83, 79,1)",
                            borderCapStyle: 'butt',
                            borderDash: [],
                            borderDashOffset: 0.0,
                            borderJoinStyle: 'miter',
                            pointBackgroundColor: "#fff",
                            pointBorderWidth: 1,
                            pointHoverRadius: 5,
                            pointHoverBorderColor: "rgba(220,220,220,1)",
                            pointHoverBorderWidth: 2,
                            pointRadius: 1,
                            pointHitRadius: 10,
                            spanGaps: false
                        },
                        {
                            type: 'line',
                            label: 'Volunteers Pending Confirmation',
                            data: PendingConfirmationCount,
                            backgroundColour: "rgba(211, 183, 234,0.75)",
                            pointBackgroundColor: "rgba(164, 104, 213,1)",
                            pointBorderColor: "rgba(164, 104, 213,1)",
                            fill: false,
                            lineTension: 0.1,
                            borderColor: "rgba(164, 104, 213,1)",
                            borderCapStyle: 'butt',
                            borderDash: [],
                            borderDashOffset: 0.0,
                            borderJoinStyle: 'miter',
                            pointBackgroundColor: "#fff",
                            pointBorderWidth: 1,
                            pointHoverRadius: 5,
                            pointHoverBorderColor: "rgba(220,220,220,1)",
                            pointHoverBorderWidth: 2,
                            pointRadius: 1,
                            pointHitRadius: 10,
                            spanGaps: false
                        },
                        {
                            type: 'line',
                            label: 'Volunteers Attended',
                            data: ConfirmedCount,
                            fill: false,
                            lineTension: 0.1,
                            backgroundColor: "rgba(223, 240, 216,0.75)",
                            borderColor: "rgba(92, 184, 92,1)",
                            borderCapStyle: 'butt',
                            borderDash: [],
                            borderDashOffset: 0.0,
                            borderJoinStyle: 'miter',
                            pointBorderColor: "rgba(92, 184, 92,1)",
                            pointBackgroundColor: "#fff",
                            pointBorderWidth: 1,
                            pointHoverRadius: 5,
                            pointHoverBackgroundColor: "rgba(92, 184, 92,1)",
                            pointHoverBorderColor: "rgba(220,220,220,1)",
                            pointHoverBorderWidth: 2,
                            pointRadius: 1,
                            pointHitRadius: 10,
                            spanGaps: false,
                        },
                        {
                            type: 'line',
                            label: 'Volunteers Requested',
                            data: PotentialVolunteers,
                            fill: false,
                            lineTension: 0.1,
                            backgroundColor: "rgba(252, 248, 227,1)",
                            borderColor: "rgba(240, 173, 78,1)",
                            borderCapStyle: 'butt',
                            borderDash: [],
                            borderDashOffset: 0.0,
                            borderJoinStyle: 'miter',
                            pointBorderColor: "rgba(240, 173, 78,1)",
                            pointBackgroundColor: "#fff",
                            pointBorderWidth: 1,
                            pointHoverRadius: 5,
                            pointHoverBackgroundColor: "rgba(240, 173, 78,1)",
                            pointHoverBorderColor: "rgba(220,220,220,1)",
                            pointHoverBorderWidth: 2,
                            pointRadius: 1,
                            pointHitRadius: 10,
                            spanGaps: false,
                        }]
                },
                options: {
                    responsive: true,
                }
            });
        </script>
    </div>
</div>