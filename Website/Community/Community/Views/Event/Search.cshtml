@model IEnumerable<Community.Models.Event>

@{
    ViewBag.Title = "Search";
}
<h2>Search</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-xs-12 col-md-3 @if (ViewBag.Search != true) { Html.Raw("col-md-offset-3"); } ">
        @Html.Partial("_Sidebar")
    </div>
    <div class="col-xs-12 col-md-9">
        @if (ViewBag.Search == true)
        {
            foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-sm-12">
                        <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                        <p>@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                        <h4>@Html.DisplayFor(modelItem => item.Date)</h4>
                        <button href="@Url.Action("Details", "Details", new { id = item.ID })" class="btn btn-success">Details</button>
                    </div>
                </div>
            }
            if (Model.Count() == 0)
            {
                <h3>Sorry, we couldn't find any events near you!</h3>
                <p>
                    Please try either:
                    <ul>
                        <li>Expanding your search radius</li>
                        <li>Reduce the number of filters in your search</li>
                        <li>Try searching in another location</li>
                    </ul>
                </p>
            }
        }
    </div>
</div>