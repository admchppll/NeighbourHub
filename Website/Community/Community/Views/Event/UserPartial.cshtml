@model IEnumerable<Community.Models.Event>
@{
    Layout = null;
}
<div class="row text-center">
    <h3>My Hosted Events</h3>
</div>
@if (Model.Count() == 0)
{
    <div class="col-xs-12 text-center">
        <h4>You have no upcoming events that you're hosting. Would you like to create a new event? @Html.ActionLink("Create", "Create", new { controller = "Event" }, new { @class = "btn btn-info"})</h4>
    </div>
}
else {
<table class="table table-center">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { controller = "Event", id = item.ID }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>
<div class="row text-center">
    @Html.ActionLink("View All", "Index", "Event")
</div>
}
