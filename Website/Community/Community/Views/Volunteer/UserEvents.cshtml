@model IEnumerable<Community.Models.Volunteer>

@{
    ViewBag.Title = "My Events";
}

<h2>Events I Volunteered For</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
            Time
        </th>
        <th>
            Length
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.Event.Title, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Address.Name)
        </td>
        <td>@Html.ActionLink("View Event", "Details", new { id = item.ID })</td>
    </tr>
}

</table>
