@model IEnumerable<Community.Models.Volunteer>
@{
    Layout = null;
}
<div class="row text-center">
    <h3>My Volunteer Events</h3>
</div>
@if (Model.Count() == 0) {
    <div class="col-xs-12 text-center">
        <h4>You have no upcoming volunteering events. Why not @Html.ActionLink("search", "Search", new { controller = "Event" }) for some new opportunities?</h4>@Html.ActionLink("Find Opportunities", "Search", new { controller = "Event" }, new { @class = "btn btn-info" })
    </div>
}
else {
<table class="table table-center">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
            Time
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Event.Title, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Time)
            </td>
            <td>
                @Html.ActionLink("View", "Details", "Event", new { id = item.EventID, @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>
<div class="row text-center">
    @Html.ActionLink("View All", "UserEvents")
</div>
}