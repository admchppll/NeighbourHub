@using (Html.BeginForm("Search", "Event"))
{
<div class="row" id="eventSearch">    
    <div class="col-xs-12 eventSearch">
        <h4>Search Events</h4>
    </div>
    <div class="col-xs-12 eventSearch">  
        <input class="form-control" aria-label="" name="postcode" placeholder="Postcode" type="text">
    </div>
    <div class="col-xs-12 eventSearch">
        <div class="col-xs-12 input-group">
            <select name="distance" class="form-control">
                <option value="0.5">0.5 Miles</option>
                <option selected="selected" value="1">1 Mile</option>
                <option value="2">2 Miles</option>
                <option value="3">3 Miles</option>
                <option value="4">4 Miles</option>
                <option value="5">5 Miles</option>
                <option value="10">10 Miles</option>
            </select>
            <div class="input-group-btn">
                <button type="submit" class="btn btn-primary col-xs-12">Search</button>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    #eventSearch > .eventSearch {
        padding-bottom: 15px;
    }

    .eventSearch h4 {
        text-align: center;
    }
</style>
<!--<input type="text" class="form-control" name="postcode" placeholder="Postcode">-->
}
