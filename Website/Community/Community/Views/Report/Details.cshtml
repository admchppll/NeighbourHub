@model Community.Models.Report
@using Community.Helpers;
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            Reported Event
        </dt>

        <dd>
            <a class="btn btn-primary" href="@Url.Action("Details", "Event", new { id = Model.ReportedEvent })">View Event</a>@Html.DisplayFor(model => model.Event.Title)
        </dd>

        <dt>
            Reported User
        </dt>

        <dd>
            <a class="btn btn-primary" href="@Url.Action("Details", "Profile", new { id = ProfileHelper.CurrentProfileID(Model.ReportedID) })">View Profile</a>@Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            Reported By
        </dt>

        <dd>
            <a class="btn btn-primary" href="@Url.Action("Details", "Profile", new { id = ProfileHelper.CurrentProfileID(Model.UserID) })">View Profile</a> @Html.DisplayFor(model => model.User1.UserName)
        </dd>

    </dl>
</div>
@{
    Html.RenderAction("AuditReport", "Audit", new { reportId = Model.ID });
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
