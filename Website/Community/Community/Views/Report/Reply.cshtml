@model Community.Models.Message
@using (Html.BeginForm("MessageCreate", "Report", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-xs-12">
        <h4>Reply To Reporter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input id='Title' name='Title' type="hidden" value='@ViewBag.Title' />
        <input id='RecipientID' name='RecipientID' type="hidden" value='@ViewBag.RecipientID' />
        <input id='Admin' name='Admin' type="hidden" value='1' />

        <div class="form-group">
            <div class="col-xs-12">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control max-width no-resize", rows = "10" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Reply" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
